<main>
    <article>
        <p>Create Post</p>
        <ul>
            <li><label for "create-userid">User ID: </label>
        <select name="create-userid">
        {{#each users}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

            <li><label for "create-timestamp">Timestamp: </label>
        <input type="time" name="create-timestamp"></li>

            <li><label for "create-content">Content: </label>
        <textarea name="create-content"></textarea></li>

        <li><button>Create Post</button></li>
        </ul>
    </article>

    <article>
        <p>Retrieve Post</p>
        <ul>
            <li><label for "retrieve-postid">Post ID: </label>
        <select name="retrieve-postid">
            <option value="NULL"></option>
        {{#each posts}}
            <option value={{id}}>{{id}} - {{content}}</option>
        {{/each}}
        </select>

            <li><label for "retrieve-userid">User ID: </label>
        <select name="retrieve-userid">
            <option value="NULL"></option>
        {{#each users}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

        <li><button>Retrieve Posts</button></li>
        </ul>

        <table class="output">
            <caption>Output - Leave fields blank to select rows without regard to the value of that column</caption>
            <tr>
                <th>Post ID</th>
                <th>User ID</th>
                <th>Timestamp</th>
                <th>Content</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </table>
    </article>

    <article>
        <p>Delete Post</p>
        <ul>
            <li><label for "delete-userid">User ID: </label>
        <select name="delete-userid">
            <option value="NULL"></option>
        {{#each users}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

            <li><label for "delete-postid">Post ID: </label>
        <select name="delete-postid">
            <option value="NULL"></option>
        {{#each posts}}
            <option value={{id}}>{{id}} - {{content}}</option>
        {{/each}}
        </select>

        <li><button>Delete Post</button></li>
        </ul>
    </article>
</main>