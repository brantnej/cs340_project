<main>
    <article>
        <p>Create Game</p>
        <ul>
            <li><label for "create-gamename">Game Name: </label>
        <input type="text" name="create-gamename"></li>

        <li><label for "create-developer-id">Developer ID: </label>
        <select name="create-developer-id">
        {{#each developers}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>    

            <li><label for "create-releasedate">Release Date: </label>
        <input type="date" name="create-birthdate"></li>

        <li><button>Create Game</button></li>
        </ul>
    </article>

    <article>
        <p>Retrieve Game</p>
        <ul>
            <li><label for "retrieve-gamename">Game Name: </label>
        <select name="retrieve-gamename">
            <option value="NULL"></option>
        {{#each games}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

        <li><label for "retrieve-developer-id">Developer ID: </label>
        <select name="retrieve-developer-id">
            <option value="NULL"></option>
        {{#each developers}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

            <li><label for "retrieve-releasedate">Release Date: </label>
        <input type="date" name="retrieve-birthdate"></li>

        <li><button>Retrieve Games</button></li>
        </ul>

        <table class="output">
            <caption>Output - Leave fields blank to select rows without regard to the value of that column</caption>
            <tr>
                <th>Game ID</th>
                <th>Game Name</th>
                <th>Developer ID</th>
                <th>Release Date</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </table> 
    </article>

    <article>
        <p>Update Game</p>
        <ul>
            <li><label for "update-old-gamename">Old Game Name: </label>
         <select name="update-old-gamename">
        {{#each games}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

         <li><label for "update-new-gamename">New Game Name: </label>
        <input type="text" name="update-new-gamename"></li>

        <li><label for "update-new-developer-id">New Developer ID: </label>
        <select name="update-new-developer-id">
        {{#each developers}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

            <li><label for "update-new-releasedate">New Release Date: </label>
        <input type="date" name="update-new-birthdate"></li>

        <li><button>Update Games</button></li>
        </ul>
    </article>

    <article>
        <p>Delete Game</p>
        <ul>
            <li><label for "delete-gamename">Game Name: </label>
        <select name="update-old-gamename">
            <option value="NULL"></option>
        {{#each games}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

        <li><label for "delete-developer-id">Developer ID: </label>
        <select name="delete-developer-id">
            <option value="NULL"></option>
        {{#each developers}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>

        <li><button>Delete Game</button></li>
        </ul>
    </article>
</main>