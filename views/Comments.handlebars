<main>
    <article>
        <p>Create Comment</p>
        <ul>
            <li>
                <label for="create-userID">User ID:</label>
                <select name="create-userID">
        {{#each users}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>
            </li>
            <li>
                <label for="create-postID">Post ID:</label>
                <select name="create-postID">
        {{#each posts}}
            <option value={{id}}>{{id}} - {{content}}</option>
        {{/each}}
        </select>
            </li>
            <li>
                <label for="create-timestamp">TimeStamp:</label>
                <input type = "datetime-local" name ="create-timestamp">
            </li>
            <li>
                <label for="create-content">Content:</label>
                <textarea name ="create-content"></textarea>
            </li>
            <li>
                <button>Create Comment</button>
            </li>
        </ul>
    </article>
    <article>
    <p>Delete Comments on Post</p>
        <ul>
            <li>
                <label for="delete-userID">User ID:</label>
                <select name="delete-userID">
        {{#each users}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>
            </li>
            <li>
                <label for="delete-postID">Post ID:</label>
                <select name="delete-postID">
        {{#each posts}}
            <option value={{id}}>{{id}} - {{content}}</option>
        {{/each}}
        </select>
            </li>
            <li>
                <button id="delete-comment">Delete Comment</button>
            </li>
        </ul>
    </article>

    <article>
    <p>Retrieve Comment</p>
        <ul>
            <li>
                <label for="select-userID">User ID:</label>
                <select name="select-userID">
                    <option value="NULL"></option>
        {{#each users}}
            <option value={{id}}>{{id}} - {{name}}</option>
        {{/each}}
        </select>
            </li>
            <li>
                <label for="select-postID">Post ID:</label>
                <select name="select-postID">
        {{#each posts}}
            <option value={{id}}>{{id}} - {{content}}</option>
        {{/each}}
        </select>
            </li>
            <li>
                <button id="select-comment">Select Comment</button>
            </li>
        </ul>
         <table class="output">
            <caption>Output - Leave fields blank to select rows without regard to the value of that column</caption>
            <tr>
                <th>Comment ID</th>
                <th>User ID</th>
                <th>Post ID</th>
                <th>Timestamp</th>
                <th>Content</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </table> 
    </article>
</main>